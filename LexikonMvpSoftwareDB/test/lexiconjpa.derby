CREATE TABLE language (
LANGUAGE_ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
LANGUAGE_NAME VARCHAR(255),
PRIMARY KEY (LANGUAGE_ID),
);

CREATE TABLE specialty (
TERM_ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
PRIMARY KEY (TERM_ID),
);

CREATE TABLE technicalterm (
TERM_ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
SPECIALTY_TERM_ID INT,
PRIMARY KEY (TERM_ID),
);

CREATE TABLE translation (
TRANSLATION_ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
TRANSLATION_DESCRIPTION VARCHAR(255),
TRANSLATION_NAME VARCHAR(255),
TERM_TERM_ID INT,
LANGUAGE_LANGUAGE_ID INT,
);


ALTER TABLE technicalterm ADD CONSTRAINT FK_TECHNICALTERM_SPECIALTY_TERM_ID FOREIGN KEY (SPECIALTY_TERM_ID) REFERENCES specialty (TERM_ID);

ALTER TABLE translation ADD CONSTRAINT FK_TRANSLATION_LANGUAGE_LANGUAGE_ID FOREIGN KEY (LANGUAGE_LANGUAGE_ID) REFERENCES language (LANGUAGE_ID);